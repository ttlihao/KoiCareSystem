@page
@model KoiCareSystem.Pages.PaymentPage.UserPaymentHistoryModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment History - @Model.UserName</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <!-- Title and Username Display -->
        <h2 class="text-center">Payment History for @Model.UserName</h2>
        <hr>

        <!-- Payment History Table -->
        @if (Model.Payments != null && Model.Payments.Count > 0)
        {
            <table class="table table-bordered table-striped mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Payment Date</th>
                        <th scope="col">Total</th>
                        <th scope="col">Status</th>
                        <th scope="col">Order ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model.Payments)
                    {
                        <tr>
                            <td>@payment.PaymentDate?.ToString("yyyy-MM-dd")</td>
                            <td>@payment.Total:C</td>
                            <td>@payment.Status</td>
                            <td>@payment.OrderId</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <!-- Message when there is no payment history -->
            <p class="text-center mt-4 text-muted">No payment history available for this user.</p>
        }

        <!-- Back Button -->
        <div class="text-center mt-4">
            <a class="btn btn-primary" href="/Users">Back to User List</a>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
