@page
@model KoiCareSystem.Pages.PaymentPage.EditModel

@{
    ViewData["Title"] = "Edit Payment";
}

<h1>Edit Payment</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Payment.Id" />

            <div class="form-group">
                <label asp-for="Payment.OrderId" class="control-label">Order ID</label>
                <input asp-for="Payment.OrderId" class="form-control" />
                <span asp-validation-for="Payment.OrderId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.PaymentDate" class="control-label">Payment Date</label>
                <input asp-for="Payment.PaymentDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.Total" class="control-label">Total Amount</label>
                <input asp-for="Payment.Total" class="form-control" />
                <span asp-validation-for="Payment.Total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Payment.Status" class="control-label">Status</label>
                <select asp-for="Payment.Status" class="form-control">
                    <option value="">Select Status</option>
                    <option value="COMPLETED">Completed</option>
                    <option value="FAILED">Failed</option>
                </select>
                <span asp-validation-for="Payment.Status" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
