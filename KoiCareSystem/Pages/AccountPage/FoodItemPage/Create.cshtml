@page
@model             CreateModel

@{
    ViewData["Title"] = "Create Food Item";
}

<h1>Create Food Item</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="FoodItem.FoodName" class="control-label"></label>
        <input asp-for="FoodItem.FoodName" class="form-control" />
        <span asp-validation-for="FoodItem.FoodName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodItem.Price" class="control-label"></label>
        <input asp-for="FoodItem.Price" class="form-control" type="number" step="0.01" min="0.01" />
        <span asp-validation-for="FoodItem.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodItem.Category" class="control-label"></label>
        <input asp-for="FoodItem.Category" class="form-control" />
        <span asp-validation-for="FoodItem.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodItem.Type" class="control-label"></label>
        <input asp-for="FoodItem.Type" class="form-control" />
        <span asp-validation-for="FoodItem.Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodItem.Quantity" class="control-label"></label>
        <input asp-for="FoodItem.Quantity" class="form-control" type="number" min="0" />
        <span asp-validation-for="FoodItem.Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodItem.Status" class="control-label"></label>
        <select asp-for="FoodItem.Status" class="form-control">
            <option value="ACTIVE">ACTIVE</option>
            <option value="INACTIVE">INACTIVE</option>
        </select>
        <span asp-validation-for="FoodItem.Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
