@model KoiCareSystem.Pages.CustomerPage.IndexModel


@{
    ViewData["Title"] = "Index";
}

    <div class="admin-container">
        <div class="sidebar">
            <h3>Management</h3>
            <ul>
                <li><a href="#" onclick="showContent('pond')" id="user-tab">Manage Pond</a></li>
                <li><a href="#" onclick="showContent('koifish')" id="koifish-tab">Manage Koi Fish</a></li>
            <li><a href="#" onclick="showContent('feeding')" id="koifish-tab">Manage Feeding</a></li>
            <li><a href="#" onclick="showContent('waterparameter')" id="koifish-tab">Manage WaterParameter</a></li>
            </ul>
        </div>

        <div class="content">
            <div id="pond-content" class="tab-content">
                <h1>Manage Pond</h1>

<p>
                <a asp-page="./ManagePond/Create" class="btn btn-primary">Create New</a>
</p>
            <div class="row">
                @foreach (var item in Model.Pond)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="~/images/default-pond.jpg" class="card-img-top" alt="Pond Image">
                            <div class="card-body">
                                <h5 class="card-title" style="text-align:center">Name: @Html.DisplayFor(modelItem => item.Name)</h5>
                                <p class="card-text" style="text-align:center">Discription: @Html.DisplayFor(modelItem => item.Description)</p>
                                <p class="card-text" style="text-align:center"><small class="text-muted">Location: @Html.DisplayFor(modelItem => item.Location)</small></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-page="./ManagePond/Details" asp-route-id="@item.Id" class="btn btn-warning">View Details</a>
                                    <a asp-page="./ManagePond/Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                                    <a asp-page="./ManagePond/Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            </div>

            <!-- Danh sách Koi fish trong hệ thống -->
            <div id="koifish-content" class="tab-content" style="display: none;">
                <h1>Manage Koi Fish</h1>

                <p>
                <a asp-page="./ManageKoiFish/Create" class="btn btn-primary">Create New</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.KoiFish[0].FishName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KoiFish[0].ImagePath)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KoiFish[0].Age)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KoiFish[0].Species)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KoiFish[0].Gender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KoiFish[0].Origin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KoiFish[0].Note)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.KoiFish[0].CreatedTime)
                            </th>
@*                             <th>
                                @Html.DisplayNameFor(model => model.KoiFish[0].Deleted)
                            </th> *@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.KoiFish)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FishName)
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImagePath))
                                    {
                                        <img src="@item.ImagePath" alt="Koi Fish Image" style="width: 50px; height: 50px; border-radius: 5px;" />
                                    }
                                    else
                                    {
                                        <span>No image available</span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Age)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Species)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Origin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Deleted)
                                </td>
                                <td>
                                <a asp-page="./ManageKoiFish/Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                                <a asp-page="./ManageKoiFish/Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a> |
                                <a asp-page="./ManageKoiFish/Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        <div id="waterparameter-content" class="tab-content" style="display: none;">
            <h1>Manage Pond Water Parameter</h1>

            <p>
                <a asp-page="./ManageWaterParameter/Create" class="btn btn-primary">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.WaterParameter[0].Temperature)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WaterParameter[0].PH)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WaterParameter[0].Co2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WaterParameter[0].No2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WaterParameter[0].IsDeleted)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WaterParameter[0].Pond)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.WaterParameter != null && Model.WaterParameter.Any())
                    {
                        @foreach (var item in Model.WaterParameter)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Temperature)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Co2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.No2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsDeleted)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pond.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <p>No water parameters available.</p>
                    }
                </tbody>
            </table>
        </div>

        <div id="feeding-content" class="tab-content" style="display: none;">
            <h1>Manage Feeding</h1>

            <p>
                <a asp-page="./FeedingPage/Create" class="btn btn-primary">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>Pond Name</th>
                     
                        <th>
                            @Html.DisplayNameFor(model => model.Feeding.FirstOrDefault().FoodType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Feeding.FirstOrDefault().FeedAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Feeding.FirstOrDefault().FeedingTime)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Feeding != null && Model.Feeding.Any())
                    {
                        @foreach (var item in Model.Feeding)
                        {
                            <tr>
                                <td>
                                    @item.PondFeedings.FirstOrDefault()?.Pond?.Name
                                </td>
                               
                                <td>@Html.DisplayFor(modelItem => item.FoodType)</td>
                                <td>@Html.DisplayFor(modelItem => item.FeedAmount)</td>
                                <td>@item.FeedingTime?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No feeding records available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>

<style>
    /* Styles for layout and appearance */
    .admin-container {
        display: flex;
    }

    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 250px;
        background-color: #343a40;
        color: #fff;
        padding: 20px;
        border-right: 1px solid #444;
    }

        .sidebar h3 {
            margin-top: 0;
            font-size: 1.2em;
            border-bottom: 1px solid #555;
            padding-bottom: 10px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

            .sidebar ul li {
                margin: 15px 0;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: #adb5bd;
                    font-size: 1.1em;
                    transition: color 0.3s;
                }

                    .sidebar ul li a:hover {
                        color: #fff;
                    }

    .content {
        margin-left: 100px;
        margin-right: -100px;
        padding: 20px;
        flex: 1;
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
        }

    /* Manage Feeding Styles */
    #feeding-content {
        background-color: #f1f4f8;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    }

        #feeding-content h1 {
            color: #343a40;
            text-align: center;
            font-weight: 600;
            margin-bottom: 20px;
        }

        #feeding-content .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            #feeding-content .btn-primary:hover {
                background-color: #0056b3;
            }

        #feeding-content table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        #feeding-content th,
        #feeding-content td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        #feeding-content th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        #feeding-content td a {
            color: #007bff;
            text-decoration: none;
            font-weight: 600;
        }

            #feeding-content td a:hover {
                color: #0056b3;
                text-decoration: underline;
            }

        #feeding-content .text-center {
            color: #6c757d;
            font-style: italic;
        }

</style>

<script>
    function showContent(tab) {
        // Hide all tab content
        var contents = document.querySelectorAll('.tab-content');
        contents.forEach(function (content) {
            content.style.display = 'none';
        });

        // Remove 'active' class from all sidebar links
        var tabs = document.querySelectorAll('.sidebar ul li a');
        tabs.forEach(function (tab) {
            tab.classList.remove('active');
        });

        // Show selected tab content
        document.getElementById(tab + '-content').style.display = 'block';

        // Set active class for clicked tab
        document.getElementById(tab + '-tab').classList.add('active');
    }

    // Set default active tab on page load
    window.onload = function () {
        showContent('user');
    };
</script>
