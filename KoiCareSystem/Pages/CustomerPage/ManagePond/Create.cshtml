@model KoiCareSystem.Pages.CustomerPage.ManagePond.CreateModel

@{
    ViewData["Title"] = "Create";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create new Account</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(120deg, #3498db, #8e44ad);
            height: 100vh;
        }

        .create-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            position: absolute;
            top: 7%;
            left: 40%;
            width: 100%;
            max-width: 400px;
        }

        .create-container h2 {
            margin-bottom: 20px;
            font-weight: bold;
            color: #333;
        }

        .form-control {
            margin-bottom: 15px;
            border-radius: 5px;
        }

        .btn-submit {
            background-color: #3498db;
            color: white;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: none;
        }

            .btn-submit:hover {
            background-color: #2980b9;
        }

        .links {
            text-align: center;
            margin-top: 10px;
        }

        .links a {
            color: #3498db;
            text-decoration: none;
        }

        .links a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="create-container">

        <!-- Display validation summary for any errors -->
        <div class="text-danger">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <h2>Create new Pond</h2>
                <form method="post">
