@page
@model KoiCareSystem.Pages.CustomerPage.FeedingPage.IndexModel

@{
    ViewData["Title"] = "Feeding Index";
}

<h1>Feeding Records</h1>

<p>
    <a asp-page="Create">Create New Feeding</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Pond Name</th>
            <th>
                @Html.DisplayNameFor(model => model.Feeding.FirstOrDefault().PondFeedingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feeding.FirstOrDefault().FoodType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feeding.FirstOrDefault().FeedAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feeding.FirstOrDefault().FeedingTime)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Feeding != null && Model.Feeding.Any())
        {
            @foreach (var item in Model.Feeding)
            {
                <tr>
                    <td>
                        @item.PondFeedings.FirstOrDefault()?.Pond?.Name ?? "N/A"
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.PondFeedingId)</td>
                    <td>@Html.DisplayFor(modelItem => item.FoodType)</td>
                    <td>@Html.DisplayFor(modelItem => item.FeedAmount)</td>
                    <td>@item.FeedingTime?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No feeding records available.</td>
            </tr>
        }
    </tbody>
</table>
