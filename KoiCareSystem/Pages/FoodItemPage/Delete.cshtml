@page
@model KoiCareSystem.Pages.FoodItemPage.DeleteModel

@{
    ViewData["Title"] = "Delete Food Item";
}

<h1>Delete Food Item</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>FoodItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Food Name</dt>
        <dd class="col-sm-10">@Model.FoodItem.FoodName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.FoodItem.Price</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.FoodItem.Category</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.FoodItem.Type</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.FoodItem.Quantity</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.FoodItem.Status</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="FoodItem.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
