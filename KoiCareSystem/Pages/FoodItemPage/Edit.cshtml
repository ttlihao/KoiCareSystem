@page
@model KoiCareSystem.Pages.FoodItemPage.EditModel

@{
    ViewData["Title"] = "Edit Food Item";
}

<h1>Edit Food Item</h1>

<form method="post">
    <input type="hidden" asp-for="FoodItem.Id" />

    <div class="form-group">
        <label asp-for="FoodItem.FoodName" class="control-label">Food Name</label>
        <input asp-for="FoodItem.FoodName" class="form-control" />
        <span asp-validation-for="FoodItem.FoodName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FoodItem.Price" class="control-label">Price</label>
        <input asp-for="FoodItem.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="FoodItem.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FoodItem.Category" class="control-label">Category</label>
        <input asp-for="FoodItem.Category" class="form-control" />
        <span asp-validation-for="FoodItem.Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FoodItem.Type" class="control-label">Type</label>
        <input asp-for="FoodItem.Type" class="form-control" />
        <span asp-validation-for="FoodItem.Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FoodItem.Quantity" class="control-label">Quantity</label>
        <input asp-for="FoodItem.Quantity" class="form-control" type="number" min="0" />
        <span asp-validation-for="FoodItem.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FoodItem.Status" class="control-label">Status</label>
        <input asp-for="FoodItem.Status" class="form-control" />
        <span asp-validation-for="FoodItem.Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
