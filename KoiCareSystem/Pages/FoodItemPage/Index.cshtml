@page
@model KoiCareSystem.Pages.FoodItemPage.IndexModel

@{
    ViewData["Title"] = "Shop Our Food Items";
}

<!-- Background Image -->
<img src="/images/koi-background.jpg" class="background-image" alt="Koi fish background" />

<!-- Search and Sort Container -->
<!-- Search and Sort Form -->
<img src="/images/koi-background.jpg" class="background-image" alt="Koi fish background" />

<div class="container my-4 content-container">
    <h1 class="text-center mb-4" style="color: white;">Shop Our Food Items</h1>

    <!-- Search and Sort Form -->
    <form method="get" asp-page="./Index" id="filterForm" class="d-flex justify-content-between align-items-center mb-4">
        <!-- Search Input and Button -->
        <div class="input-group" style="max-width: 400px;">
            <input type="text" class="form-control" placeholder="Search by name" asp-for="SearchTerm" />
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>

        <!-- Sort Dropdown -->
        <select class="form-control ml-3" asp-for="SortOrder" style="max-width: 200px;" onchange="this.form.submit()">
            <option value="">Sort by</option>
            <option value="name_asc">Name: A to Z</option>
            <option value="name_desc">Name: Z to A</option>
            <option value="price_asc">Price: Low to High</option>
            <option value="price_desc">Price: High to Low</option>
        </select>
    </form>

    <!-- Food Items Grid -->
    <div class="row">
        @foreach (var item in Model.FilteredFoodItems)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                <!-- Food Item Card -->
                <div class="card h-100 shadow-sm rounded text-center bg-white bg-opacity-75">
                    <div class="card-body p-3">
                        <!-- Product Name -->
                        <h6 class="card-title font-weight-bold mb-1" style="font-size: 1rem; color: #333;">@item.FoodName</h6>

                        <!-- Price -->
                        <p class="font-weight-bold mb-1" style="color: #ff5722; font-size: 0.9rem;">$@item.Price</p>

                        <!-- Category and Type Badges -->
                        <p class="mb-1" style="font-size: 0.85rem;">
                            <span class="badge badge-info text-light">@item.Category</span>
                            <span class="badge badge-secondary ml-1 text-light">@item.Type</span>
                        </p>

                        <!-- Quantity Selector and Add to Cart Button -->
                        <form method="post" asp-page-handler="AddToCart" class="mt-2">
                            <div class="d-flex justify-content-center align-items-center mb-2">
                                <input type="number" name="quantities[@item.Id]" id="quantity-@item.Id"
                                       class="form-control text-center" min="1" max="@item.Quantity" value="1"
                                       style="width: 60px; height: 30px; font-size: 0.85rem; background-color: #007bff; color: white; border: 1px solid #0056b3; margin-right: 5px;" />
                            </div>
                            <button type="submit" name="itemId" value="@item.Id"
                                    class="btn btn-primary btn-sm w-100"
                                    style="background-color: #28a745; border-color: #28a745;">
                                Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Style for the page -->
<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        color: white;
    }

    /* Background image styling */
    .background-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        object-fit: cover;
    }

    /* Content container styling for centered layout */
    .content-container {
        position: relative;
        z-index: 1;
        padding: 20px;
        background: rgba(0, 0, 0, 0.5); /* Semi-transparent dark background */
        border-radius: 10px;
    }

    /* Card styling */
    .card {
        background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white */
        border: none;
    }

    .card-body {
        color: #333;
    }

    /* Title styling */
    h1 {
        font-size: 2.5rem;
    }

    /* Button and badge styling for consistent colors */
    .badge-info {
        background-color: #17a2b8;
    }

    .badge-secondary {
        background-color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
