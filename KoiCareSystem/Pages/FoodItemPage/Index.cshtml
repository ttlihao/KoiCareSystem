@page
@model KoiCareSystem.Pages.FoodItemPage.IndexModel

@{
    ViewData["Title"] = "Manage Food Items";
}

<h1>Manage Food Items</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Food Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodItems[0].FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItems[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItems[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItems[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItems[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodItems[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FoodItems)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FoodName)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
