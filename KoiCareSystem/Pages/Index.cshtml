@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<img src="/images/koi-background.jpg" class="background-image" alt="Hình nền chăm sóc cá koi" />

<section class="page-section">
    <div class="content-container">
        <h1 class="main-title">Chăm Sóc Cá Koi Chuyên Nghiệp Tại Nhà</h1>
        <h3 class="sub-title">Đảm bảo sức khỏe và sự phát triển tốt nhất cho cá koi của bạn.</h3>
    </div>
</section>

<section class="page-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-left">
                <img src="~/images/Koi-Feeding.jpg" class="img-fluid rounded" alt="Koi Fish Food Image">
            </div>
            <div class="col-md-6 text-center text-md-left">
                <div class="content-container">
                    <h1 class="main-title">Thức ăn tốt nhất cho sự phát triển cá Koi</h1>
                    <h3 class="sub-title">Tìm hiểu thêm về sản phẩm của chúng tôi</h3>
                    <button class="btn-book-now" onclick="window.location.href='#'">Koi Fish Food</button>
                </div>
            </div>
        </div>
    </div>
</section>


<style>
   body {
    margin: 0;
    font-family: Arial, sans-serif;
    color: white;
    height: 100vh;
    overflow: auto;
}

.background-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    object-fit: cover;
}

.page-section {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
    width: 100%;
}

.content-container {
    text-align: center;
    padding: 20px;
    background: rgba(0, 0, 0, 0.5); /* Optional: to make text more readable over the background image */
    border-radius: 10px; /* Optional: to give the content container rounded corners */
}

.main-title {
    font-size: 3rem;
    color: white;
    margin-bottom: 20px;
}

.sub-title {
    font-size: 1.5rem;
    color: #f0f0f0;
    margin-bottom: 30px;
}

.btn-book-now {
    padding: 12px 24px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1.25rem;
}

.btn-book-now:hover {
    background-color: #0056b3;
}

</style>
