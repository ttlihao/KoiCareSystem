@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<img src="/images/koi-background.jpg" class="background-image" alt="Hình nền chăm sóc cá koi" />
<div class="content-container">
    <h1 class="main-title">Chăm Sóc Cá Koi Chuyên Nghiệp Tại Nhà</h1>
    <h3 class="sub-title">Đảm bảo sức khỏe và sự phát triển tốt nhất cho cá koi của bạn.</h3>
    <button class="btn-book-now" onclick="window.location.href='#'">Book Now</button>
</div>

<div class="content-container">
    <h1 class="main-title">Thức ăn tốt nhất cho sự phát triển cá Koi</h1>
    <h3 class="sub-title">Đảm bảo sức khỏe và sự phát triển tốt nhất cho cá koi của bạn.</h3>
    <button class="btn-book-now" onclick="window.location.href='#'">Book Now</button>
</div>

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        color: white;
        height: 100vh;
        overflow: hidden;
    }

    .background-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        object-fit: cover;
    }

    .content-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
    }

    .main-title {
        font-size: 3rem;
        color: white; /* Updated color */
        margin-bottom: 20px;
    }

    .sub-title {
        font-size: 1.5rem;
        color: #f0f0f0;
        margin-bottom: 30px;
    }

    .btn-book-now {
        padding: 12px 24px;
        background-color: #007bff; /* Blue background */
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.25rem;
    }

    .btn-book-now:hover {
        background-color: #0056b3; /* Darker blue on hover */
    }
</style>
