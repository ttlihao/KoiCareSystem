@page
@model KoiCareSystem.Pages.AccountPage.LoginModel
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - KoiCareSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background: linear-gradient(to bottom, #d0e7ff, #004080);
        }

        /* Centered login container */
        .login-container {
            width: 100vh;
            max-width: 100vh; /* Optional: adjust max width */
            background-color: #ffffff;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display:flex
        }

        /* Left image section */
        .image-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .koi-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Login form section */
        .login-form-section {
            flex: 1;
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .login-form-section h2 {
                text-align: center;
                color: #333;
                font-size: 24px;
                margin-bottom: 20px;
            }

        .login-form .form-group {
            margin-bottom: 15px;
        }

        .form-actions {
            display: flex;
            justify-content: center; /* Center login button */
            margin-top: 20px;
        }


    </style>
</head>
<body>

    <div class="login-container">
        <!-- Left Koi fish image -->
        <div class="image-section">
            <img src="/images/koi-fish.jpg" alt="Koi Fish" class="koi-image" />
        </div>

        <!-- Right login form -->
        <div class="login-form-section">
            <h2>Login</h2>
            <form method="post" class="login-form">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input name="txtEmail" id="email" type="text" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input name="txtPassword" id="password" type="password" class="form-control" />
                </div>

                <!-- Display validation error -->
                @if (!ModelState.IsValid)
                {
                    <div class="text-danger">
                        @ModelState[""].Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                }

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
            <div class="links text-center mt-3">
                <a href="/Register">Create an Account</a> |
                <a href="/Index">View Koi Page</a>
            </div>
        </div>
    </div>

</body>
</html>
