@page
@model UserPaymentHistoryModel

@{
    // Lấy giá trị userId từ session
    var userId = HttpContext.Session.GetString("UserId");

    if (string.IsNullOrEmpty(userId))
    {
        Response.Redirect("/Login"); // Ví dụ: chuyển hướng về trang login nếu không có session
    }

    ViewData["Title"] = "Payment History for " + Model.UserName;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom CSS for Title */
        .page-title {
            font-size: 22px; /* Slightly larger title */
            text-align: left; /* Left align */
            font-weight: bold; /* Bold text */
            color: #007bff; /* Blue color */
            margin-bottom: 30px; /* Margin below the title */
        }

        /* Card style for the container */
        .payment-history-card {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Table styling */
        .payment-history-table thead {
            background-color: #f8f9fa;
            color: #495057;
        }

        .payment-history-table th, .payment-history-table td {
            text-align: center;
            vertical-align: middle;
        }

        /* Back Button Styling */
        .back-btn {
            margin-top: 20px;
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Card for the entire payment history section -->
        <div class="card payment-history-card">
            <!-- Title and Username Display -->
            <h2 class="page-title">Payment History for @Model.UserName</h2>
            <hr>

            <!-- Payment History Table -->
            @if (Model.Payments != null && Model.Payments.Count > 0)
            {
                <table class="table payment-history-table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Payment Date</th>
                            <th scope="col">Total</th>
                            <th scope="col">Status</th>
                            <th scope="col">Order ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model.Payments)
                        {
                            <tr>
                                <td>@payment.PaymentDate?.ToString("dd-MM-yyyy")</td>
                                <td>@payment.Total VN</td>
                                <td>@payment.Status</td>
                                <td>@payment.OrderId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <!-- Message when there is no payment history -->
                <p class="text-center mt-4 text-muted">No payment history available for this user.</p>
            }

            <!-- Back Button -->
            <div class="text-center mt-4">
                <a class="btn btn-primary back-btn" href="/Index">Back</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
